}

function asan_on() {
    export LD_PRELOAD=/usr/lib/libasan.so
    export ASAN_OPTIONS=protect_shadow_gap=0:replace_intrin=0:detect_leaks=0
}
 
function asan_off() {
    export LD_PRELOAD=""
}

function listening() {
    netstat -nlp | grep $1
}

function benchmark() {
    if [ $# -lt 2 ]; then
        echo "Usage: $0 N \"command [args...]\""
        return
    fi

    local n=$1
    shift
    local cmd=("$@")
    local total=0

    for i in $(seq 1 $n); do
        local elapsed=$(LC_NUMERIC=C /usr/bin/time -f "%e" ${cmd[@]} 2>&1 >/dev/null)
        total=$(awk -v t="$total" -v e="$elapsed" 'BEGIN { printf "%.6f", t+e }')
    done

    local avg=$(awk -v t="$total" -v n="$n" 'BEGIN { printf "%.6f", t/n }')
    echo "Average time over $n runs: $avg seconds"
}
